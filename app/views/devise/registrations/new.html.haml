%h2= t('forms.sign_up')
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  %div
    = f.label :email
    %br
    = f.email_field :email, autofocus: true
  %div
    = f.label :password
    - if @validatable
      %i= '(' + t('forms.password_restrictions') + ')'
    %br
    = f.password_field :password, autocomplete: 'off'
  %div
    = f.label :password_confirmation
    %br
    = f.password_field :password_confirmation, autocomplete: 'off'
  %div
    = f.label :first_name
    %br
    = f.text_field :first_name
  %div
    = f.label :last_name
    %br
    = f.text_field :last_name
  %div
    = f.label :street
    %br
    = f.text_field :street, :class => 'form-control'
  %div
    = f.label :city
    %br
    = f.text_field :city
  %div
    = f.label :zip_code
    %br
    = f.text_field :zip_code
  %div
    = f.label :region
    %br
    = f.text_field :region
  %div
    = f.label :country
    %br
    = f.text_field :country
  %div
    = f.label :phone_number
    %br
    = f.text_field :phone_number
  %div
    = f.label :attend_to_courses
    %br
    = f.check_box :attend_to_ebc
    = f.label :attend_to_ebc, style: 'font-weight: normal;'
    %br
    = f.check_box :attend_to_isbi
    = f.label :attend_to_isbi, style: 'font-weight: normal;'
  %div
    = f.label :status
    %br
    = f.select :status, options_for_select([[t('forms.status_list.doctor'), 'doctor'], [t('forms.status_list.nurse'), 'nurse'], [t('forms.status_list.health_proffessionnal'), 'health_proffessionnal'], [t('forms.status_list.other'), 'other']]), {}, :class => 'form-control'
  %div
    = f.label :country_type
    %br
    = f.select :country_type, options_for_select([[t('forms.country_type_list.emergent'), 'emergent'], [t('forms.country_type_list.developed'), 'developed']]), {}, :class => 'form-control'
  %div
    = f.label :language
    %br
    = f.select :language, options_for_select([[t('forms.language_list.fr'), 'fr'], [t('forms.language_list.en'), 'en']]), {}, :class => 'form-control'
  %br
  %div= f.submit t('forms.submit'), {:class => 'btn btn-default'}